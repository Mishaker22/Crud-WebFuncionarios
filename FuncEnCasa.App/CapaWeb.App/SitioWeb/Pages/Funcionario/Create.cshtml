@page
@model SitioWeb.Pages_Funcionario.CreateModel
@using FuncEnCasa.App.Dominio
@{
    ViewData["Title"] = "Programming Life-Crear";
}
<form method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="contenedorAgregar">
        <div class="contenedorCreate">

            <div class="form-group">
                <label asp-for="funcionario.idTipoDocumento" class="control-label"
                    asp-items="Html.GetEnumSelectList<TipoDocumento>()">Tipo Documento:</label>
                <select asp-for="funcionario.idTipoDocumento" class="form-control"
                    asp-items="Html.GetEnumSelectList<TipoDocumento>()"></select>
                <span asp-validation-for="funcionario.idTipoDocumento" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="funcionario.usuario._Id" class="control-label">Numero de Documento:</label>
                <input asp-for="funcionario.usuario._Id" class="form-control" />
                <span asp-validation-for="funcionario.usuario._Id" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="funcionario.nombre" class="control-label">Nombre:</label>
                <input asp-for="funcionario.nombre" class="form-control" />
                <span asp-validation-for="funcionario.nombre" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="funcionario.apellido" class="control-label">Apellido:</label>
                <input asp-for="funcionario.apellido" class="form-control" />
                <span asp-validation-for="funcionario.apellido" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="funcionario.genero" class="control-label"
                    asp-items="Html.GetEnumSelectList<Genero>()">Genero:</label>
                <select asp-for="funcionario.genero" class="form-control"
                    asp-items="Html.GetEnumSelectList<Genero>()"></select>
                <span asp-validation-for="funcionario.genero" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="funcionario.fechaNacimiento" class="control-label">Fecha de Nacimiento:</label>
                <input type="date" asp-for="funcionario.fechaNacimiento" class="form-control" />
                <span asp-validation-for="funcionario.fechaNacimiento" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="funcionario.tipoSanguineo" class="control-label"
                    asp-items="Html.GetEnumSelectList<TipoSanguineo>()">Tipo Sanguineo:</label>
                <select asp-for="funcionario.tipoSanguineo" class="form-control"
                    asp-items="Html.GetEnumSelectList<TipoSanguineo>()"></select>
                <span asp-validation-for="funcionario.tipoSanguineo" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="funcionario.sucursal.nombreSucursal" class="control-label"></label>
                <select asp-for="funcionario.sucursalId" class="form-control">
                    @foreach (var sucursal in Model.sucursales)
                    {
                        <option value="@sucursal._Id">@sucursal.nombreSucursal</option>
                    }
                </select>
                <span asp-validation-for="funcionario.sucursal.nombreSucursal" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="funcionario.idTipoContactoCorreo" class="control-label"
                    asp-items="Html.GetEnumSelectList<TipoContacto>()">Tipo de contacto Correo:</label>
                <select asp-for="funcionario.idTipoContactoCorreo" class="form-control"
                    asp-items="Html.GetEnumSelectList<TipoContacto>()"></select>
                <span asp-validation-for="funcionario.idTipoContactoCorreo" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="funcionario.correo.correo" class="control-label">Correo:</label>
                <input asp-for="funcionario.correo.correo" class="form-control" />
                <span asp-validation-for="funcionario.correo.correo" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="funcionario.idTipoContactoTelefono" class="control-label"
                    asp-items="Html.GetEnumSelectList<TipoContacto>()">Tipo de contacto telefono:</label>
                <select asp-for="funcionario.idTipoContactoTelefono" class="form-control"
                    asp-items="Html.GetEnumSelectList<TipoContacto>()"></select>
                <span asp-validation-for="funcionario.idTipoContactoTelefono" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="funcionario.telefono.numeroTel" class="control-label">Telefono:</label>
                <input asp-for="funcionario.telefono.numeroTel" class="form-control" />
                <span asp-validation-for="funcionario.telefono.numeroTel" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="funcionario.ciudad.nombreCiudad" class="control-label"></label>
                <select asp-for="funcionario.ciudadId" class="form-control">
                    @foreach (var ciudad in Model.ciudades)
                    {
                        <option value="@ciudad._Id">@ciudad.nombreCiudad</option>
                    }
                </select>
                <span asp-validation-for="funcionario.ciudad.nombreCiudad" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="funcionario.direccion.direccion" class="control-label">Direccion:</label>
                <input asp-for="funcionario.direccion.direccion" class="form-control" />
                <span asp-validation-for="funcionario.direccion.direccion" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Crear" class="btnCancelar">
            </div>
        </div>
    </div>


</form>
